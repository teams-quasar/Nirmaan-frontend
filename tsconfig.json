{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
   
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "allowJs": true // <-- Add this line
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "src/store/authSlice.js" ,  "src/**/*.js","src/store/.js"]
}
